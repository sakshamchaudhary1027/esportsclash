generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?
  role          Role     @default(USER)
  createdAt     DateTime @default(now())

  tournaments   Tournament[]   // ðŸ‘ˆ YE LINE ADD KARNI THI
}




model Tournament {
  id          String   @id @default(uuid())
  title       String
  game        String
  prize       String
  poster      String
  description String
  date        DateTime
  status      TournamentStatus @default(DRAFT)

  organizerId String
  organizer   User @relation(fields: [organizerId], references: [id])

  createdAt   DateTime @default(now())
}

enum Role {
  ADMIN
  ORGANIZER
  USER
}

enum TournamentStatus {
  DRAFT
  LIVE
  COMPLETED
}
